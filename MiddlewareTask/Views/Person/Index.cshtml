@model MiddlewareTask.Models.Person

<h2>Person List</h2>

<table class="table" id="persontable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Designation</th>
            <th>Company</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="personList">
        <!-- This will be populated with data via AJAX -->
    </tbody>
</table>

<h2>Add Person</h2>
<form id="addPersonForm">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" required>
    </div>
    <div class="form-group">
        <label for="Designation">Designation:</label>
        <input type="text" class="form-control" id="Designation" name="Designation" required>
    </div>
    <div class="form-group">
        <label for="Company">Company:</label>
        <input type="text" class="form-control" id="Company" name="Company" required>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            
            // Function to load the person list
            var table = $("#persontable").DataTable({
                ajax: {
                    url: "/api/PersonApi/GetPerson",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                     
                    },
                    {
                        data: "designation"
                    },
                    {
                        data: "company"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link btn-danger js-delete' data-customer-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            function loadPersonList() {
                table.ajax.reload();
            }
            
            // Function to add a person via AJAX
            $("#addPersonForm").submit(function (event) {
                event.preventDefault();
                var person = {
                    Name: $("#Name").val(),
                    Designation: $("#Designation").val(),
                    Company: $("#Company").val()
                };

                $.ajax({
                    url: "/api/PersonApi/AddPerson",
                    type: "POST",
                    contentType: "application/json",
                    data: JSON.stringify(person), 
                    success: function (data) {
                        loadPersonList();
                        $("#Name").val("");
                        $("#Designation").val("");
                        $("#Company").val("");
                    }
                });
            });

            // Function to delete a person
            $("#persontable").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure,you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/PersonApi/delete/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
}